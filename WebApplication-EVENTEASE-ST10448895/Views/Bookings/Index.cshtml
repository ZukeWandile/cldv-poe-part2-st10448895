@model IEnumerable<WebApplication_EVENTEASE_ST10448895.Models.Bookings>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Booking ID, Event, or Venue" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Venue</th>
            <th>Event</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Booking_ID</td>
                    <td>@item.Venue?.Venue_Name (@item.Venue?.Locations)</td>
                    <td>@item.EventS?.Event_Name (@item.EventS?.Descriptions)</td>
                    <td>@item.Booking_Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Booking_ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Booking_ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Booking_ID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>
