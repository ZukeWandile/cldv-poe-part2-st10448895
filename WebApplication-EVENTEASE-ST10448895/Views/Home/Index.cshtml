@{
    ViewData["Title"] = "Welcome to EVENTEASE";
}

<style>
    body {
        background: linear-gradient(135deg, #dbeeff, #f0f9ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-section {
        background-color: #ffffff;
        padding: 60px 40px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        margin: 50px auto;
    }

    .welcome-title {
        font-size: 3rem;
        font-weight: 700;
        color: #003366;
        margin-bottom: 10px;
    }

    .welcome-subtitle {
        font-size: 1.25rem;
        color: #555;
        margin-bottom: 30px;
    }

    .welcome-btn {
        font-size: 1.1rem;
        padding: 15px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        width: 100%;
    }

        .welcome-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container text-center">
    <div class="welcome-section">
        <h1 class="welcome-title">Welcome to EVENTEASE</h1>
        <p class="welcome-subtitle">Plan, book, and manage your events with ease.</p>
        <hr class="my-4" />

        <div class="row justify-content-center">
            <div class="col-md-5 mb-4">
                <a asp-controller="Venue" asp-action="Index" class="btn btn-primary welcome-btn">
                    Manage Venues
                </a>
            </div>
            <div class="col-md-5 mb-4">
                <a asp-controller="EventS" asp-action="Index" class="btn btn-success welcome-btn">
                    View Events
                </a>
            </div>
            <div class="col-md-5 mb-4">
                <a asp-controller="Bookings" asp-action="Index" class="btn btn-info welcome-btn">
                    Book Now
                </a>
            </div>
            <div class="col-md-5 mb-4">
                <a asp-controller="BookingDetails" asp-action="Index" class="btn btn-warning text-white welcome-btn">
                    Current Bookings
                </a>
            </div>
        </div>
    </div>
</div>
