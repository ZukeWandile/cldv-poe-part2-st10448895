@model WebApplication_EVENTEASE_ST10448895.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue_Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Locations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Locations)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>

        <dt class="col-sm-2">
            Venue Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
            {
                <div class="mt-2">
                    <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 100%; height: auto; border-radius: 8px;" />
                </div>
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Venue_ID">Edit</a> |
