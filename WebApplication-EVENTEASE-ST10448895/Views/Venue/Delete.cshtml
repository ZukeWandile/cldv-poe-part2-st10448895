@model WebApplication_EVENTEASE_ST10448895.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Venue</h1>

<h3 class="text-danger">Are you sure you want to delete this venue?</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<div>
    <h4>Venue Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue_Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Locations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Locations)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Venue Image" width="150" height="150"
                     style="object-fit:cover; border-radius:8px; box-shadow:0 2px 5px rgba(0,0,0,0.2);" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Venue_ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
